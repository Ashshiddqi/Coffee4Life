<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <!-- Main Content -->
    <LinearLayout
        android:id="@+id/item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/white">

        <!-- Item Image -->
        <ImageView
            android:id="@+id/iv_item_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@color/background_light"
            android:contentDescription="Item Image" />

        <!-- Item Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical">

            <!-- Item Name -->
            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Americano"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="4dp" />

            <!-- Item Details -->
            <TextView
                android:id="@+id/tv_item_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="single | iced | medium | full ice"
                android:textColor="@color/light_gray"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="8dp" />

            <!-- Quantity Controls -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Decrease Button -->
                <ImageButton
                    android:id="@+id/btn_decrease"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/border_square"
                    android:src="@drawable/ic_minus"
                    android:scaleType="centerInside"
                    android:padding="4dp"
                    android:contentDescription="Decrease"
                    app:tint="@color/dark_gray" />

                <!-- Quantity Text -->
                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="x 1"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="sans-serif" />

                <!-- Increase Button -->
                <ImageButton
                    android:id="@+id/btn_increase"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/border_square"
                    android:src="@drawable/ic_plus"
                    android:scaleType="centerInside"
                    android:padding="4dp"
                    android:contentDescription="Increase"
                    app:tint="@color/dark_gray" />

            </LinearLayout>

        </LinearLayout>

        <!-- Item Price -->
        <TextView
            android:id="@+id/tv_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp\n10.000"
            android:textColor="@color/dark_gray"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:fontFamily="sans-serif"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            tools:ignore="RtlCompat" />  <!-- FIX: Added the closing '/>' -->



    </LinearLayout>

</androidx.cardview.widget.CardView>